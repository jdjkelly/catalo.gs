<div class="row">
  <div class="span12 noun-city-header">
    <%= image_tag @city.image_path %>
    <h1><%= @noun.name %> <small>in <%= @city.name %></small> <span class="pull-right"><%= @answers.count %> answers</span></h1>
  </div>
</div>

<div class="row">
  <div class="span8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>link</th>
          <th>body</th>
          <th>rep</th>
          <th>location</th>
          <th>user</th>
        </tr>
      </thead>
      <tbody>
        <% @answers.each do |answer| %>
          <tr>
            <td><%= link_to answer.id, answer_path(answer) %></td>
            <td><%= answer.body %></td>
            <td><%= answer.reputation %></td>
            <td><%= answer.location.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



