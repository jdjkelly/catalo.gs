<%= render "map" %>

<%= render "answers" %>

<% content_for :javascripts do %>
  $(function() {
    Better.map.setView(new L.LatLng(<%= latitude %>, <%= longitude %>), 12, true);

    Better.map.locations = <%= @locations.to_json.html_safe %>;

    Better.map.markers = (function() {
      <% @answers.each do |answer| %>
        L.marker([<%= answer.latitude %>, <%= answer.longitude %>], {title: "test"} ).addTo(Better.map);
      <% end %>
    })();
  })
  
<% end %>

